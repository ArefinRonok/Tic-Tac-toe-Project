#include <iostream>
using namespace std;
class Game
{
public:
    char board[3][3];
    int totalMoves;

    Game()
    {
        char count = '1';
        for (int i = 0; i < 3; i++)
        {
            for (int j = 0; j < 3; j++)
            {
                board[i][j] = count++;
            }
        }
        totalMoves = 0;
    }

    void displayBoard()
    {
        cout << "Current Board:\n";
        cout << "-------------\n";
        for (int i = 0; i < 3; i++)
        {
            for (int j = 0; j < 3; j++)
            {
                cout << " " << board[i][j] << " ";
                if (j < 2) cout << "|";
            }
            cout << "\n";
            if (i < 2) cout << "-------------\n";
        }
        cout << "-------------\n";
    }

    bool isMoveValid(int move)
    {
        if (move < 1 || move > 9)
        {
            return false;
        }
        int row = (move - 1) / 3;
        int col = (move - 1) % 3;
        if (board[row][col] == 'X' || board[row][col] == 'O')
        {
            return false;
        }
        return true;
    }

    void makeMove(int move, char symbol)
    {
        int row = (move - 1) / 3;
        int col = (move - 1) % 3;
        board[row][col] = symbol;
        totalMoves++;
    }

    bool isDraw()
    {
        return totalMoves == 9;
    }
};


class TicTacToe : public Game
{
public:
    char currentPlayer;

    TicTacToe() : Game()
    {
        currentPlayer = 'X';
    }

    bool checkWin()
    {
        for (int i = 0; i < 3; i++)
        {
            if (board[i][0] == currentPlayer && board[i][1] == currentPlayer && board[i][2] == currentPlayer)
            {
                return true;
            }
        }
        for (int i = 0; i < 3; i++)
        {
            if (board[0][i] == currentPlayer && board[1][i] == currentPlayer && board[2][i] == currentPlayer)
            {
                return true;
            }
        }

        if (board[0][0] == currentPlayer && board[1][1] == currentPlayer && board[2][2] == currentPlayer)
        {
            return true;
        }
        if (board[0][2] == currentPlayer && board[1][1] == currentPlayer && board[2][0] == currentPlayer)
        {
            return true;
        }
        return false;
    }

    void switchPlayer()
    {
        currentPlayer = (currentPlayer == 'X') ? 'O' : 'X';
    }

    void playGame()
    {
        cout << "Welcome to Tic Tac Toe!\n";
        displayBoard();

        while (true)
        {
            int move;
            cout << "Player " << (currentPlayer == 'X' ? 1 : 2) << " (" << currentPlayer << "), enter your move (1-9): ";
            cin >> move;

            if (!isMoveValid(move))
            {
                cout << "Invalid move. Try again.\n";
                continue;
            }

            makeMove(move, currentPlayer);
            displayBoard();

            if (checkWin())
            {
                cout << "Player " << (currentPlayer == 'X' ? 1 : 2) << " (" << currentPlayer << ") wins!\n";
                break;
            }

            if (isDraw())
            {
                cout << "It's a draw! No more moves left.\n";
                break;
            }

            switchPlayer();
        }

        cout << "Game Over. Thanks for playing!\n";
    }
};

int main()
{
    TicTacToe game;
    game.playGame();
    return 0;
}

